      - name: "Synology DS415+"
        icon: "fas fa-hard-drive"
        url: "{{ homer_url_synology}}"
      - name: "Supermicro-BMC"
        icon: "fas fa-server"
        url: "{{ homer_url_supermicro }}"
      - name: "Fractal"
        icon: "fas fa-server"
        url: "{{ homer_url_fractal }}"
  - name: "Services (30-49)"
